8from time_tracking import tracker

def main():
    while True:
        print("\n=== Freelance Toolkit Menu ===")
        print("1. Track Time")
        print("2. Exit")
        print("3. View Time Logs")
        choice = input("Choose an option: ")

        if choice == "1":
            tracker.track_time()
        elif choice == "2":
            print("Goodbye!")
            break
        elif choice == "3":
            tracker.view_logs()
        else:
            print("Invalid choice. Please try again.")
if __name__ == "__main__":
    main()
    
